---
import { getCollection } from 'astro:content';

import Layout from '../layouts/Layout.astro';
import LiveBlocks from '../components/LiveBlocks.jsx';
import PageHeader from '../components/PageHeader';
import PageFooter from '../components/PageFooter';
---

<Layout title="Bitshares Blockchain Live Overview">
	<main>
		<PageHeader client:only="react" page="blocks" backURL="../index.html" />
		<LiveBlocks client:only="react" />
		<PageFooter client:only="react" sourceURL="https://github.com/BTS-CM/astro-ui/blob/main/src/pages/blocks.astro" />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 100%;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		min-height: 100vh;
	}
</style>