---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader';
import PageFooter from '../components/PageFooter';
import TicketLeaderboardComp from '../components/TicketLeaderboard.jsx';
---

<Layout title="Bitshares - Ticket Leaderboard">
  <main>
    <PageHeader client:only="react" page="ticket_leaderboard" backURL="../index.html" />
    <TicketLeaderboardComp client:only="react" />
    <PageFooter client:only="react" sourceURL="https://github.com/BTS-CM/astro-ui/blob/main/src/pages/ticket_leaderboard.astro" />
  </main>
</Layout>
<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 100%;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    min-height: 100vh;
  }
</style>
